---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "现代化、高性能的人工智能平台";
const seoDescription = "一个现代化、高性能的人工智能平台，为开发者提供完整的解决方案。";

const heroContent = {
    title: '为您的业务提供智能化解决方案',
    description: 'AI PLATFORM 是一个专业的人工智能平台，为您提供全方位的智能化服务。我们的平台采用最新技术，确保高性能、可扩展性和易用性，帮助您快速实现业务智能化升级。',
    buttons: [
        {
            text: '开始使用',
            link: '/contact',
            target: '_self'
        },
        {
            text: '查看源码',
            link: 'https://github.com/rspisarski/titan-core',
            target: '_blank'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "核心功能",
    title: "一站式智能化解决方案",
    description: "我们的平台提供完整的智能化解决方案，包括但不限于自然语言处理、计算机视觉、知识图谱等多个领域，助力您的业务快速实现智能化升级。",
    features: featureLists.main.features,
    button: {
        text: "了解更多",
        link: "/theme-info",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "加入我们",
    title: '立即开始使用 AI PLATFORM',
    description: 'AI PLATFORM 是一个开源项目，我们持续改进和优化。加入我们的开发者社区，获取支持并展示您的创新应用。',
    hideCta: false,
    button: {
        text: '立即下载',
        link: 'https://github.com/rspisarski/titan-core',
        target: '_blank'
    }
}

const styleGuideSection = {
    eyebrow: "设计系统",
    headline: "统一美观的组件库",
    description: "我们提供完整的设计系统，确保您的项目保持视觉一致性。从排版到交互元素，每个组件都经过精心设计。",
    image: {
        src: styleGuideImage,
        alt: "特色图片"
    },
    buttons: [
        {
            text: "浏览样式指南",
            link: "/style-guide",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "性能数据",
    title: "为速度和灵活性而生",
    description: "我们的平台专注于性能和开发体验。轻量级的设计让您能够快速构建所需的功能，同时保持出色的性能表现。",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "为速度和灵活性而生",
        description: "我们的平台专注于性能和开发体验。轻量级的设计让您能够快速构建所需的功能，同时保持出色的性能表现。",
        button: {
            text: "了解更多",
            link: "/theme-info",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "组件库",
    title: "即用型组件",
    description: "使用我们预构建的、无障碍的组件节省开发时间。每个组件都经过精心设计，可以无缝集成到您的项目中，同时保持卓越的性能。",
    button: {
        text: "查看所有组件",
        link: "/components",
        variant: "primary" as const,
        target: "_self" as const
    }
};

const logosSection = {
    eyebrow: "我们的客户",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "常见问题",
    title: '常见问题解答',
    description: '查找关于我们平台和服务的常见问题答案。',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "最新洞察",
    title: "学习我们的经验",
    description: "探索我们关于人工智能开发、平台使用技巧和性能优化的最新文章。",
    button: {
        text: "查看所有文章",
        link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} category="Theme Usage"/>
    <SplitPanel content={styleGuideSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>